@model TravelDream.Services.ViewModels.CompanyModels.InputCompanyViewModel

@{
	ViewBag.Title = "Add Company";
	Layout = "_Layout";
}

<main class="mt-5 w-50 mx-auto main bg-white">
	<h1 class="text-center bg-bet p-2 top">Register</h1>
	<form class="text-center font-weight-bold" method="post" asp-area="Administration" asp-action="Register" asp-controller="Users">
		<div class="p-2">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group w-50 mx-auto">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" placeholder="Name..." />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group w-50 mx-auto">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" placeholder="Email..." />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group w-50 mx-auto">
				<label asp-for="PhoneNumber"></label>
				<input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber..." />
				<span asp-validation-for="PhoneNumber" class="text-danger"></span>
			</div>
			<div class="form-group w-50 mx-auto">
				<label asp-for="Address"></label>
				<input asp-for="Address" class="form-control" placeholder="Confirm Password..." />
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>
		</div>
		<input type="submit" id="btn-login" class="bg-bet p-2 w-100 font-weight-bold" value="Sign In" />
	</form>
</main>